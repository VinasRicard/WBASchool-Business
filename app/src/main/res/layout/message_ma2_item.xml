<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/message_ma2_item_relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="10dp">


    <TextView
        android:id="@+id/showSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:fontFamily="@font/karla_bold"
        android:textColor="@color/colorBlue"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/dot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/yellow_dot"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/archivingBtn"
        android:layout_marginRight="20dp"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/savingBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_blue_bookmark_border"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/archivingBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/savingBtn"
        android:src="@drawable/ic_archive_grey"
        android:contentDescription="TODO" />


</RelativeLayout>