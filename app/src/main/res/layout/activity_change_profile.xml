<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.changeProfileActivity"
    android:background="@drawable/rounded_white_background">


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/popupCloseBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close_grey"
            android:layout_gravity="end"
            android:contentDescription="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/karla_bold"
            android:text="@string/name"
            android:textColor="@color/colorBlue"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/changeNameEt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/karla_bold"
            android:text="@string/mailAdress"
            android:textColor="@color/colorBlue"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/changeMailEt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/mailAdress"/>

        <Button
            android:id="@+id/editAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_blue_btn"
            android:padding="20dp"
            android:text="@string/editAccount" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>